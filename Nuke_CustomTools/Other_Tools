#  create range cards with increasing position over z axis scaling


amount = 10
for s in range(1,amount):
  a = nuke.nodes.Card()
  pos = s * 3 * (amount/5)
  a['translate'].setValue([0,0,pos])
  a['uniform_scale'].setValue(pos)

# a range cards connect with Scene node

amount = 10
for s in range(amount):
    a = nuke.nodes.Card()
    pos = s * (amount/5)
    a['translate'].setValue([0,0,pos])
    a['uniform_scale'].setValue(pos)
    a['selected'].setValue(True)
    k = nuke.selectedNodes()
b = nuke.createNode("Scene")
x = 0
for i in k:
  b.setInput(x,i)

amount = 10
for s in range(amount):
    a = nuke.nodes.Card()
    pos = float(float(s) * float(amount/5))
    a['translate'].setValue([0,0,pos])
    a['uniform_scale'].setValue(pos)
    a['selected'].setValue(True)
    k = nuke.selectedNodes()
b = nuke.createNode("Scene")
x = 0
for i in k:
   b.setInput(x,i)

