# create a range nodes

blurlist = []
gradelist = []
pan = nuke.getInput('the number of nodes you want?', 'create a range')
for ex in range (int(pan)):
  bl = nuke.createNode("Blur", inpanel = False)
  n = bl['name'].value()
  blurlist.append(n)
  gr = nuke.createNode("Grade", inpanel = False)
  g = gr['name'].value()
  gradelist.append(g)
  tf = nuke.createNode("Transform", inpanel = False)['selected'].setValue(False)

print blurlist
print gradelist

